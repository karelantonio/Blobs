#:kivy 2.3.1

# Contains all the screens
<RootWidget>:
    canvas.before:
        # The background image
        Rectangle:
            pos: self.pos
            size: self.size
            source: "res/start-background.jpg"

    StartScreen:
        name: 'start'
    OverviewScreen:
        name: 'overview'
    AboutScreen
        name: 'about'

# A Blob, its just a sad creature either of artificial materials
# or flesh.
<Blob>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

# Here we should show the "Start" button, the "Load JSON" button and the "About" button
<StartScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'


        # The three buttons
        MDBoxLayout:
            style: 'elevated'
            orientation: 'vertical'
            spacing: dp(10)
            size_hint: (0.4, 0.3)

            MDButton:
                on_press: root.manager.current = "overview"
                pos_hint: {"center_x": .5}

                MDButtonIcon:
                    icon: 'arrow-right'
                MDButtonText:
                    text: 'Start/Continue'

            MDButton:
                on_press: root.manager.current = "about"
                pos_hint: {"center_x": .5}

                MDButtonIcon:
                    icon: 'information-outline'
                MDButtonText:
                    text: 'About'

# The overview widget
<OverviewScreen>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            id: events_top_bar
            size_hint_y: None
            height: dp(56)
            padding: dp(8)
            spacing: dp(8)

            MDButton:
                on_press: root.manager.current = 'start'
                MDButtonText:
                    text: "Go back"

            Label:
                text: "Event list"
                font_size: dp(26)
                color: '#000000'

            MDButton:
                #on_press: root.manager.current = '???'
                MDButtonText:
                    text: "New Event"



# Brief description of the project
<AboutScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.4, 0.3)

            Label:
                color: '#000000'
                font_size: sp(26)
                text: 'About'

            Label:
                color: '#000000'
                font_size: sp(24)
                text: '1st semester programming project'

            MDButton:
                on_press: root.manager.current = "start"
                MDButtonText:
                    text: 'Go back'


