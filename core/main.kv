#:kivy 2.3.1
#:include core/ui/start_screen.kv
#:include core/ui/about_screen.kv
#:include core/ui/overview_screen.kv
#:include core/ui/new_event_screen.kv

# Contains all the screens
<RootWidget>:
    canvas.before:
        # The background image
        Rectangle:
            pos: self.pos
            size: self.size
            source: "res/start-background.jpg"

    StartScreen:
        name: 'start'
    OverviewScreen:
        name: 'overview'
    AboutScreen
        name: 'about'
    NewEventScreen:
        name: 'new_event'

# A Blob, its just a sad creature either of artificial materials
# or flesh.
<Blob>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

