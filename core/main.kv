#:kivy 2.3.1

# Contains all the screens
<RootWidget>:
    StartScreen

# A Blob, its just a sad creature either of artificial materials
# or flesh.
<Blob>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

# Here we should show the "Start" button, the "Load JSON" button and the "About" button
<StartScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        canvas.before:
            # The background image
            Rectangle:
                pos: self.pos
                size: self.size
                source: "res/start-background.jpg"


        # The three buttons
        BoxLayout:
            orientation: 'vertical'
            spacing: dp(10)
            size_hint: (0.4, 0.5)

            MaterialButton:
                text: 'Start/Continue'
            MaterialButton:
                text: 'Load JSON'
            MaterialButton:
                text: 'About'

# Utilities
<MaterialButton>:
    color: '#000000'
    font_size: sp(24)
    background_normal: 'res/material-button-normal.9.png'
    background_down: 'res/material-button-down.9.png'
